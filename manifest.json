{
  "manifest_version": 3,
  "name": "GLM-Highlight",
  "version": "1.0.5",
  "description": "一个强大的网页文本高亮工具，支持多分类高亮、颜色自定义、配置导入导出、分享码功能，让您的阅读体验更加丝滑。",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "action": {
    "default_icon": "img/icon48.png",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/highlight.css"],
      "js": [
        "js/jquery.js",
        "js/utils.js",
        "js/config.js",
        "js/highlighter.js",
        "js/content-action.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],

  "permissions": ["tabs", "storage", "contextMenus", "commands"],

  "host_permissions": ["http://*/*", "https://*/*"],

  "web_accessible_resources": [
    {
      "resources": [
        "manage.html",
        "dialog.html",
        "js/dialog.js",
        "js/jquery.js",
        "js/utils.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "commands": {
    "add-to-category": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "MacCtrl+Shift+C"
      },
      "description": "添加选中文本到高亮分类"
    },
    "remove-highlight": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "MacCtrl+Shift+D"
      },
      "description": "删除选中文本的高亮"
    }
  }
}
